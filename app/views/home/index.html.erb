<div class="container">
  <div class="row">
    <!-- BEGIN SEARCH RESULT -->
    <div class="col-md-12">
      <div class="grid search">
        <div class="grid-body">
          <div class="row">
            <div class="col-md-12">
              <h2>Github public repositories search</h2>
              <hr>
              <div class="row mb-5">
                <div class="col-lg-8 mx-auto">
                  <div class="bg-white p-5 rounded shadow">
                    <%= form_tag root_path, method: :get do %>
                      <div class="row mb-4">
                        <div class="form-group col-md-9">
                          <%= text_field_tag :search_term, @search_term, id: 'exampleFormControlInput5', placeholder: "What're you searching for?", class: "form-control form-control-underlined" %>
                        </div>
                        <div class="form-group col-md-3">
                          <%= submit_tag :search, class: 'btn btn-primary btn-block' %>
                        </div>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>

              <div class="padding"></div>

              <% if @repositories %>
                <%= render partial: 'results', locals: { repositories: @repositories } %>
              <% end %>

              <% if @repositories %>
                <%= render partial: 'paginate', locals: { page: @page, limit: @limit, search_term: @search_term } %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>